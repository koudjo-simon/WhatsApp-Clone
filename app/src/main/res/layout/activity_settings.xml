<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
<!--        Profils et autres information-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"
                android:src="@drawable/baseline_account_circle_24"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/username_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/nom_d_utilisateur_s"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:paddingBottom="3dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/user_actu"/>
            </LinearLayout>
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:src="@drawable/baseline_qr_code_2_24"
                />
        </LinearLayout>

<!--        Compte -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_margin="5dp"
                android:src="@drawable/baseline_key_24"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Compte"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:paddingBottom="2dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/notification_de_s_curit_changer_de_num_ro"/>
            </LinearLayout>
        </LinearLayout>

<!--        Confidentialité -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_margin="5dp"
                android:src="@drawable/baseline_lock_24"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Confidentialité"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:paddingBottom="2dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Bloquer des contacts, messages éphemères"/>
            </LinearLayout>
        </LinearLayout>

<!--        Avatar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_margin="5dp"
                android:src="@drawable/baseline_add_reaction_24"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Avatar"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:paddingBottom="2dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="User Actu"/>
            </LinearLayout>
        </LinearLayout>

<!--        Discussions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_margin="5dp"
                android:src="@drawable/baseline_message_24"
                android:layout_marginRight="5dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Discussions"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:paddingBottom="2dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Thème, fonds d'écran, historiques des discussions"/>
            </LinearLayout>
        </LinearLayout>

<!--        Notifications -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_margin="5dp"
                android:src="@drawable/baseline_notifications_24"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Notification"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:paddingBottom="2dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Sonneries des messages, groupes et appels"/>
            </LinearLayout>
        </LinearLayout>

<!--        Utilisation données et stockage -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_margin="5dp"
                android:src="@drawable/baseline_data_usage_24"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Utilisation données et stockages"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:paddingBottom="2dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Utilisation réseau, téléchargement auto."/>
            </LinearLayout>
        </LinearLayout>

<!--        Langue de l'application -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_margin="5dp"
                android:src="@drawable/baseline_language_24"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Langue de l'application"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:paddingBottom="2dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Français (langue du téléphone)"/>
            </LinearLayout>
        </LinearLayout>

<!--        Aide -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_margin="5dp"
                android:src="@drawable/baseline_help_outline_24"
                android:layout_marginRight="5dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Aide"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:paddingBottom="2dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Centre d'aide, contactez-nous, Politique de confidentialité"/>
            </LinearLayout>
        </LinearLayout>

<!--        Inviter un contact -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_margin="5dp"
                android:src="@drawable/baseline_group_24"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/inviter_un_contact"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:paddingBottom="2dp"
                    />
            </LinearLayout>
        </LinearLayout>

<!--        Pied de la page -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="from"
                android:textSize="15sp"
                android:paddingBottom="2dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meta"
                android:textSize="15sp"
                android:paddingBottom="2dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>